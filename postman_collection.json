{
    "info": {
        "name": "Task Posts API",
        "description": "API collection for the Task Posts application",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Authentication",
            "item": [
                {
                    "name": "Login",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json",
                                "type": "text"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"user@example.com\",\n    \"password\": \"password\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/auth/login",
                            "host": ["{{base_url}}"],
                            "path": ["api", "auth", "login"]
                        },
                        "description": "Authenticate user and get access token"
                    }
                },
                {
                    "name": "Register",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json",
                                "type": "text"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"name\": \"John Doe\",\n    \"email\": \"user@example.com\",\n    \"password\": \"password\",\n    \"password_confirmation\": \"password\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/auth/register",
                            "host": ["{{base_url}}"],
                            "path": ["api", "auth", "register"]
                        },
                        "description": "Register a new user"
                    }
                },
                {
                    "name": "Logout",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json",
                                "type": "text"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/auth/logout",
                            "host": ["{{base_url}}"],
                            "path": ["api", "auth", "logout"]
                        },
                        "description": "Logout user and invalidate token"
                    }
                }
            ]
        },
        {
            "name": "Posts",
            "item": [
                {
                    "name": "List Posts",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json",
                                "type": "text"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/posts?status=published&platform=1&date=2024-03-20",
                            "host": ["{{base_url}}"],
                            "path": ["api", "posts"],
                            "query": [
                                {
                                    "key": "status",
                                    "value": "published",
                                    "description": "Filter by status (published, scheduled, draft)"
                                },
                                {
                                    "key": "platform",
                                    "value": "1",
                                    "description": "Filter by platform ID"
                                },
                                {
                                    "key": "date",
                                    "value": "2024-03-20",
                                    "description": "Filter by date (YYYY-MM-DD)"
                                }
                            ]
                        },
                        "description": "Get list of posts with optional filters"
                    }
                },
                {
                    "name": "Create Post",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json",
                                "type": "text"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                {
                                    "key": "title",
                                    "value": "My Post Title",
                                    "type": "text"
                                },
                                {
                                    "key": "content",
                                    "value": "Post content goes here",
                                    "type": "text"
                                },
                                {
                                    "key": "scheduled_time",
                                    "value": "2024-03-20 15:00:00",
                                    "type": "text"
                                },
                                {
                                    "key": "platforms[]",
                                    "value": "1",
                                    "type": "text"
                                },
                                {
                                    "key": "platforms[]",
                                    "value": "2",
                                    "type": "text"
                                },
                                {
                                    "key": "image",
                                    "type": "file",
                                    "src": "/path/to/image.jpg"
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{base_url}}/api/posts",
                            "host": ["{{base_url}}"],
                            "path": ["api", "posts"]
                        },
                        "description": "Create a new post"
                    }
                },
                {
                    "name": "Get Post",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json",
                                "type": "text"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/posts/1",
                            "host": ["{{base_url}}"],
                            "path": ["api", "posts", "1"]
                        },
                        "description": "Get a specific post by ID"
                    }
                },
                {
                    "name": "Update Post",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json",
                                "type": "text"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                {
                                    "key": "title",
                                    "value": "Updated Post Title",
                                    "type": "text"
                                },
                                {
                                    "key": "content",
                                    "value": "Updated post content",
                                    "type": "text"
                                },
                                {
                                    "key": "scheduled_time",
                                    "value": "2024-03-21 15:00:00",
                                    "type": "text"
                                },
                                {
                                    "key": "platforms[]",
                                    "value": "1",
                                    "type": "text"
                                },
                                {
                                    "key": "image",
                                    "type": "file",
                                    "src": "/path/to/new-image.jpg"
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{base_url}}/api/posts/1",
                            "host": ["{{base_url}}"],
                            "path": ["api", "posts", "1"]
                        },
                        "description": "Update an existing post"
                    }
                },
                {
                    "name": "Delete Post",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json",
                                "type": "text"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/posts/1",
                            "host": ["{{base_url}}"],
                            "path": ["api", "posts", "1"]
                        },
                        "description": "Delete a post"
                    }
                }
            ]
        },
        {
            "name": "Platforms",
            "item": [
                {
                    "name": "List Platforms",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json",
                                "type": "text"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/platforms",
                            "host": ["{{base_url}}"],
                            "path": ["api", "platforms"]
                        },
                        "description": "Get list of all platforms"
                    }
                },
                {
                    "name": "Toggle Platform",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json",
                                "type": "text"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"active\": true\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/platforms/1/toggle",
                            "host": ["{{base_url}}"],
                            "path": ["api", "platforms", "1", "toggle"]
                        },
                        "description": "Toggle platform active status"
                    }
                }
            ]
        },
        {
            "name": "Settings",
            "item": [
                {
                    "name": "Get Settings",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json",
                                "type": "text"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/settings",
                            "host": ["{{base_url}}"],
                            "path": ["api", "settings"]
                        },
                        "description": "Get user settings and analytics"
                    }
                },
                {
                    "name": "Update Settings",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json",
                                "type": "text"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"active_platforms\": [1, 2, 3]\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/settings",
                            "host": ["{{base_url}}"],
                            "path": ["api", "settings"]
                        },
                        "description": "Update user settings"
                    }
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:8000",
            "type": "string"
        },
        {
            "key": "token",
            "value": "your_access_token_here",
            "type": "string"
        }
    ]
} 